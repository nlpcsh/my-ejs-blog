<%- include('partials/header') %>

<h1>Home</h1>

<p><%= homeInfo %></p>

<div class="all-posts">
    <% posts.forEach(function (post) { %>
        <h3 class="post-title">
            <%=post.title%>
        </h3>
        <p class="post-content"><%=post.content.substring(0, 100) + " ..."%>
            <a href="posts/<%=post._id%>">Read more</a>
        </p>
        <hr />
    <% }) %>
</div>

<%- include('partials/footer') %>